generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cart {
  id       String    @id @default(uuid()) @db.Uuid
  user     User     @relation(fields: [userId], references: [id])
  userId   String    @unique
  products Product[] @relation("CartProducts")
}

model Category {
  id          String @id @default(uuid()) @db.Uuid
  name        String
  description String
}

model Order {
  id       String    @id @default(uuid()) @db.Uuid
  user     User     @relation(fields: [userId], references: [id])
  userId   String
  products Product[] @relation("OrderProducts")
  price    Int
}

model Product {
  id          String   @id @default(uuid()) @db.Uuid
  name        String
  price       Int
  description String
  category    String
  createdAt   DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id])
  userId    String

  // Relations
  carts  Cart[]  @relation("CartProducts")
  orders Order[] @relation("OrderProducts")
}

model User {
  id        String    @id @default(uuid()) @db.Uuid
  name      String
  email     String    @unique
  password  String
  phone     String
  address   String
  type      UserType 
  carts     Cart?
  orders    Order[]
  products  Product[]
}

enum UserType {
  BUYER
  SELLER
}